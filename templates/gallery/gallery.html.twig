{% extends 'base.html.twig' %}

{% block page_title %}LaSalle Web - Gallery images!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div>
                <p><br></p>
                <h3 class="h3 mb-3 font-weight-normal">Image Gallery</h3><hr>
                <div class="card-deck">
                    {% for image in images  %}
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title mb-0"><small class="text-body">{{ image.imageName }}</small></p>
                                    <p class="card-text mb-0"><small class="text-muted">{{ image.imageFilter }}</small></p>
                                    <p class="card-text mb-0"><small class="text-muted">{{ image.tags }}</small></p>
                                    <p class="card-text mb-0">{{ image.description }}</p>
                                    {% if image.imageFilter is same as ('sin filtro')  %}
                                        <img class="card-img-top" src="{{ asset(image.imageName, 'img') }}" alt="{{ image.tags }}">
                                    {% else %}
                                        <img class="card-img-top" src="{{ asset(image.imageName, 'imgTransformada') }}" alt="{{ image.tags }}">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}